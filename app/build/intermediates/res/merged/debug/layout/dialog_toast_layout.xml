<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_background">

    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:gravity="center"
        android:textColor="@color/total_color_1"
        android:textSize="16sp"
        android:text="12231231332"
        android:id="@+id/dialog_toast_content"/>


    <Button
        android:id="@+id/dialog_toast_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_loginbt_bg"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:text="关闭"/>


</LinearLayout>