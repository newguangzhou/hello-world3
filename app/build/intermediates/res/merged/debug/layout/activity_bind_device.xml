<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/total_color_1"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            android:text="@string/bind_device_sweep"/>

        <Button
            android:id="@+id/bind_device_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="9dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/go_sport_bt_background"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/bind_device_sweep_code"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bind_device_sweep_guide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="17dp"
            android:textSize="16sp"
            android:textColor="@color/total_color_1"
            android:text="æˆ–"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/total_color_1"
            android:text="@string/bind_device_input_text"/>
        <EditText
            android:id="@+id/bind_device_input_imei"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColor="@color/total_color_7"
            android:textColorHint="@color/total_color_7"
            android:textSize="13sp"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:maxLength="15"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="56dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/edit_login_back"
            android:hint="@string/bind_device_input_hint"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="41dp"
            android:src="@drawable/bind_device_sweep_icon"/>

    </LinearLayout>

</ScrollView>