<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaomaoqiu.old"
    android:versionCode="201"
    android:versionName="2.0.0">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- SDK1.5需要android.permission.GET_TASKS权限判断本程序是否为当前运行的应用? -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 允许应用读取低级别的系统日志文件 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 用于优化GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission
        android:name="com.xiaomaoqiu.pet.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature" />

    <application
        android:name="com.xiaomaoqiu.now.SampleApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.xiaomaoqiu.now.bussiness.user.LoginActivity"
            android:theme="@style/NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaomaoqiu.now.bussiness.MainActivity"
            android:theme="@style/Anim_style2" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.dialog.ExitDialog_RAW_Activity"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="com.xiaomaoqiu.now.bussiness.user.ExitFromSettings_RAW_Activity"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="com.xiaomaoqiu.now.bussiness.AboutActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageHealth.HealthIndexActivity"
            android:label="@string/title_activity_health_index"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.hardware.BindDeviceActivity"
                  android:label="@string/bind_device"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.hardware.ZXingActivity"
                  android:label="@string/zxing"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageHealth.SleepIndexActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.ModifyWeightDialog"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.OUT___ModifyIntroDialog"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.ModifyNameDialog"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.SelectAvatarSourceDialog"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.ModifyVarietyDialog"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.ModifyVarietyDialog2"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.PetInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageHealth.SportIndexActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.dialog.GoHomeConfirmDialog_RAW_Activity"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.dialog.GoOutConfirmDialog_RAW_Activity"
            android:theme="@style/MyDialogStyleBottom" />
        <activity
            android:name="com.xiaomaoqiu.old.ui.mainPages.pageMe.MessageActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.xiaomaoqiu.old.com.xiaomaoqiu.now.bussiness.Device.HardwareActivity" />
        <activity android:name="com.xiaomaoqiu.old.ui.mainPages.pageLocate.FindPetActivity"
            android:label="@string/pet_finding"></activity>
    </application>

</manifest>