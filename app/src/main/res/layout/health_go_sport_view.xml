<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <!--去运动-->
    <LinearLayout
        android:id="@+id/go_sport_sport_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/go_sport_sport_ggspeak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:paddingTop="44dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/go_sport_top_dialog_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_dialog_background"
                android:paddingBottom="23dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="23dp"
                android:text="@string/go_sport_ggspeak_text"
                android:textColor="@color/total_color_7"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_background"
                android:orientation="vertical"
                android:paddingBottom="39dp"
                android:paddingLeft="17.5dp"
                android:paddingRight="17.5dp"
                android:paddingTop="37dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/go_sport_bt_sport_ok"
                        style="@style/go_spoert_back_bt_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:text="嗯！出去玩啦！" />

                    <Button
                        android:id="@+id/go_sport_bt_sport_quit"
                        style="@style/go_spoert_back_bt_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="暂不出门哟~" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/total_color_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/go_sport_sport_btask_info"
                    android:textColor="@color/total_color_7"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/total_color_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/go_sport_sport_btquit_info"
                    android:textColor="@color/total_color_7"
                    android:textSize="16sp" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/go_sport_bottom_dialog_back" />
        </LinearLayout>


    </LinearLayout>

    <!--回家-->
    <LinearLayout
        android:id="@+id/go_sport_back_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="36dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_dialog_background"
        android:orientation="vertical"
        android:paddingBottom="26dp"
        android:paddingLeft="15.5dp"
        android:paddingRight="15.5dp"
        android:paddingTop="123dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:text="@string/go_sport_backtext"
            android:textColor="@color/total_color_1"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_sport_bt_already_bac"
                style="@style/go_spoert_back_bt_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:text="已安全到家" />

            <Button
                android:id="@+id/go_sport_bt_not_back"
                style="@style/go_spoert_back_bt_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="还没到家哟" />
        </LinearLayout>
    </LinearLayout>

    <!--头像-->
    <!--<com.xiaomaoqiu.old.widgets.CircleImageView-->
    <!--android:id="@+id/go_sport_head"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:src="@drawable/tab_health_head_defult"-->
    <!--android:layout_marginLeft="16dp"-->
    <!--android:layout_marginTop="12dp"-->
    <!--app:inner_padding="1.5dp"-->
    <!--app:border_width="1.5dp"-->
    <!--app:border_color="@color/total_color_2"/>-->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/go_sport_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitXY"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="focusCrop"

        fresco:placeholderImage="@drawable/tab_health_head_defult"
        fresco:placeholderImageScaleType="fitCenter"

        fresco:failureImage="@drawable/tab_health_head_defult"
        fresco:failureImageScaleType="centerInside"
        fresco:roundedCornerRadius="1.5dp"
        />


</RelativeLayout>