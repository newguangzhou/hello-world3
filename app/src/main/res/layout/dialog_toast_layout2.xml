<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_background">

    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:textColor="@color/new_color_word"
        android:textSize="@dimen/after_word_size"
        android:text="12231231332"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dialog_toast_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/dialog_toast_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_background_color_3"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/after_word_size" />

        <View
            android:layout_width="24dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_toast_quit"
            android:padding="10dp"
            android:textSize="@dimen/after_word_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_background_color_3"
            android:text="取消"/>
    </LinearLayout>



</LinearLayout>