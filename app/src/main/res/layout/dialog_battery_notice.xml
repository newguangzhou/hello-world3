<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="150dp"
        android:layout_margin="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:textColor="@color/common_title"
            android:text="@string/battery_notice_levelformat"
            android:id="@+id/battery_notice_level"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="13.5sp"
            android:textColor="@color/common_body"
            android:text="@string/battery_notice_timeformat"
            android:id="@+id/battery_notice_gettime"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line"
            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/common_body"
            android:textSize="16sp"
            android:text="@string/battery_notice_content"
            android:id="@+id/battery_notice_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/battery_notice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_loginbt_bg"
        android:textSize="16sp"
        android:textColor="@color/common_button_word"
        android:layout_gravity="center_horizontal"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:text="关闭"/>


</LinearLayout>