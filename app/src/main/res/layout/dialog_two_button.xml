<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="30dp"
    android:background="@drawable/shape_dialog_background"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/two_button_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="hahaha"
        android:textColor="@color/common_body"
        android:textSize="@dimen/common_dialog_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/two_button_cancle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_background_color_3"
            android:gravity="center"
            android:text="取消"
            android:layout_marginRight="10dp"
            android:textColor="@color/common_button_word"
            android:textSize="@dimen/common_dialog_button" />



        <Button
            android:id="@+id/two_button_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_background_color_3"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="确定"
            android:textColor="@color/common_button_word"
            android:textSize="@dimen/common_dialog_button" />
    </LinearLayout>
</LinearLayout>