<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_one_button_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="hahaha"
        android:textColor="@color/common_body"
        android:textSize="@dimen/common_dialog_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_one_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background_color_3"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/common_button_word"
            android:textSize="@dimen/common_dialog_button" />
    </LinearLayout>
</LinearLayout>